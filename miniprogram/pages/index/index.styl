@import "../../styl/button.styl"
@import "../../node_modules/spinkit/css/spinners/2-double-bounce.css"
@import "../../node_modules/animate.css/source/_base.css"
@import "../../node_modules/animate.css/source/sliding_entrances/slideInDown.css"
@import "../../node_modules/animate.css/source/sliding_exits/slideOutUp.css"

.welcome
  display flex
  flex-direction column
  align-items center
  padding-top 140rpx

  &.bg
    position fixed
    z-index 0
    left 0
    width 100%
    bottom 0
    opacity .1

  image
    display block
    width 204rpx
    height 263rpx

  .h1
    font-size 60rpx
    line-height 80rpx
    font-weight bold
    margin-top 33rpx
    counter-reset wizard

  .lead,
  .hint
    line-height 48rpx

  .login-button
    primary-button()

  .hint
    margin 24rpx

  .wizard-item
    background-color #EDEFF4
    border-radius 40rpx
    width 490rpx
    height 80rpx
    line-height 80rpx
    position relative
    padding-left 80rpx
    display flex
    justify-content flex-start

    &:first-of-type
      margin-top 48rpx

    &::before
      background-color #7599FF
      border-radius 32rpx
      content counter(wizard)
      color white
      display block
      width 64rpx
      height 64rpx
      line-height 64rpx
      text-align center
      counter-increment wizard
      position absolute
      top 8rpx
      left 8rpx

    + .wizard-item
      margin-top 30rpx

.new-url
  background-color white
  border-radius 8rpx
  box-shadow 0 4rpx 16rpx rgba(#7196F1, .3)
  width 670rpx
  padding 20rpx
  margin 40rpx
  border 2rpx solid #BFC9FF

  &.fixed
    position fixed
    top 40rpx
    left 40rpx
    margin 0

  .h2
    display block
    font-size 36rpx
    line-height 48rpx
    margin-bottom 14rpx

  .summary
    background-color #F3F6FF
    border-radius 8rpx
    padding 14rpx

  .loading
    margin 10rpx 0 0
    width 30rpx
    height 30rpx

  .url
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    font-size 24rpx

  .title
    line-height 50rpx

  .excerpt
    font-size 24rpx
    line-height 32rpx

  .actions
    display flex
    justify-content space-between
    margin-top 24rpx

    button
      margin 0

  .add-button
    primary-button(300rpx, 80rpx, 32rpx)

  .cancel-button
    background-color transparent
    border none
    width 120rpx
    height 80rpx
    font-size 28rpx
    line-height 80rpx

    &::after
      border none

.listen-list
  padding 40rpx 40rpx 0
  position relative
  z-index 10

.listen-item
  background-color white
  border 1rpx solid #E2E2E2
  border-radius 8rpx
  box-shadow 0 4rpx 16rpx rgba(#000, .1)

  &.active
    border 4rpx #7599FF solid

  + .listen-item
    margin-top 40rpx

  .header
    display flex
    padding 20rpx 20rpx 0

  .h1
    font-size 36rpx
    line-height 48rpx
    flex 1
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  .badge
    background-color #7599FF
    color white
    font-size 24rpx
    width 90rpx
    height 46rpx
    line-height 46rpx
    border-radius 4rpx
    text-align center
    margin-right 10rpx

  .from
    color #AAA
    font-size 24rpx
    line-height 44rpx
    margin-bottom 10rpx
    text-indent 24rpx

  .excerpt
    color #666
    font-size 28rpx
    line-height 40rpx
    padding 0 20rpx 20rpx

.player
  background-color #EDEFF4
  display flex
  padding 20rpx

.play-button,
.pause-button
  background-color white
  border 2rpx solid #C8D6FF
  border-radius 46rpx
  filter drop-shadow(0 6rpx 14rpx rgba(#7599FF, .2))
  width 92rpx
  height 92rpx
  margin 0
  padding 0
  display flex
  justify-content center
  align-items center

  &::after
    border none

  &::active
    filter none

  image
    display block
    width 28rpx
    height 36rpx
    filter drop-shadow(0 4rpx 8rpx rgba(#7599FF, .5))
    margin-left 8rpx

  .bar
    background-color #7599FF
    border-radius 6rpx
    box-shadow 0 4rpx 8rpx rgba(#7599FF, .5)
    width 10rpx
    height 36rpx

    + .bar
      margin-left 12rpx

.play-info
  display flex
  flex-direction column
  justify-content space-between
  flex 1
  padding 20rpx

  .timer
    font-size 24rpx
    text-align right

  .progress
    background-color white
    border-radius 10rpx
    height 20rpx

  .progress-bar
    background-color #7599FF
    border-radius 10rpx
    box-shadow 0 4rpx 8rpx rgba(#7599FF, .5)
    height 20rpx
    transition all .4s
